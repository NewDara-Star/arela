{
  "enabled": true,
  "silent": true,
  "triggers": [
    {
      "type": "lines_added",
      "threshold": 1000,
      "description": "Trigger when 1000+ lines added since last index"
    },
    {
      "type": "files_added",
      "threshold": 10,
      "description": "Trigger when 10+ files added since last index"
    },
    {
      "type": "time_elapsed",
      "threshold": 3600000,
      "description": "Trigger after 1 hour (in milliseconds)"
    },
    {
      "type": "commits",
      "threshold": 5,
      "description": "Trigger after 5 commits since last index"
    }
  ],
  "exclude_patterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".git/**",
    "*.lock",
    "package-lock.json",
    "pnpm-lock.yaml",
    "yarn.lock"
  ]
}

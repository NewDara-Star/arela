{
  "name": "arela-server",
  "version": "5.0.0",
  "description": "Node.js companion server for the Arela VS Code extension",
  "private": true,
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "lint": "eslint ./src --ext .ts",
    "clean": "rimraf out",
    "test": "echo 'No tests for the server package yet'",
    "package": "pkg out/index.js --compress Brotli",
    "package:all": "npm run package -- --targets node18-macos-x64,node18-macos-arm64,node18-win-x64,node18-win-arm64,node18-linux-x64,node18-linux-arm64 --out-path ../../dist/server"
  },
  "pkg": {
    "assets": [
      "node_modules/better-sqlite3/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "better-sqlite3": "^11.0.0",
    "ollama": "^0.6.3",
    "openai": "^6.9.0",
    "tree-sitter": "^0.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "pkg": "^5.8.1"
  }
}
